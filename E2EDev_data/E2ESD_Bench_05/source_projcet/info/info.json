{
    "task_id": "83_Word Dictionary",
    "task_name": "Word Dictionary Application",
    "task_description": "A web application that allows users to search for words and view their meanings, examples, and bookmarks.",
    "modules": [
        {
            "module_id": 1,
            "module_name": "Search Module",
            "module_description": "Handles word search functionality.",
            "module_type": "frontend"
        },
        {
            "module_id": 2,
            "module_name": "Word Display Module",
            "module_description": "Displays the searched word, including pronunciation, definition, and example sentences.",
            "module_type": "frontend"
        },
        {
            "module_id": 3,
            "module_name": "History Module",
            "module_description": "Displays recently searched words.",
            "module_type": "frontend"
        },
        {
            "module_id": 4,
            "module_name": "Pronunciation Module",
            "module_description": "Reads the word aloud.",
            "module_type": "backend"
        }
    ],
    "user_requirement_list": [
        {
            "user_requirement_id": 1,
            "user_requirement_name": "Search for a Word",
            "user_requirement_description": "Users can enter a word in the search box to retrieve its meaning, pronunciation, and example sentences. An error message should be displayed for empty inputs.",
            "test_cases": [
                {
                    "test_case_id": 1,
                    "test_case_name": "Successful Word Search",
                    "test_case_description": "Verify that searching for a valid word returns the correct meaning and pronunciation.",
                    "steps": [
                        "Navigate to the website.",
                        "Locate the search bar.",
                        "Enter the word 'play'.",
                        "Click the search button."
                    ],
                    "expected_result": "The word card for 'play' is successfully displayed on the interface.",
                    "modules": [1, 4]
                },
                {
                    "test_case_id": 2,
                    "test_case_name": "Empty Search Submission",
                    "test_case_description": "Verify the error handling when the search field is empty.",
                    "steps": [
                        "Navigate to the website.",
                        "Locate the search bar.",
                        "Leave the input empty.",
                        "Click the search button."
                    ],
                    "expected_result": "An error toast saying 'Please type the word to be searched...' is displayed.",
                    "modules": [1]
                },
                {
                    "test_case_id": 3,
                    "test_case_name": "Invalid Word Search",
                    "test_case_description": "Verify that searching for an invalid word returns an appropriate error message.",
                    "steps": [
                        "Navigate to the website.",
                        "Locate the search bar.",
                        "Enter an invalid word 'zhongg'.",
                        "Click the search button."
                    ],
                    "expected_result": "An error message is displayed indicating that the word was not found.",
                    "modules": [1, 2]
                }
            ]
        },
        {
            "user_requirement_id": 2,
            "user_requirement_name": "Clear Search Box",
            "user_requirement_description": "Users should be able to clear the search box with a single click.",
            "test_cases": [
                {
                    "test_case_id": 4,
                    "test_case_name": "Clear Search Box",
                    "test_case_description": "Verify that clicking the 'Reset' button clears the search input.",
                    "steps": [
                        "Navigate to the website.",
                        "Enter 'Play' in the search box.",
                        "Click the 'Reset' button."
                    ],
                    "expected_result": "The search box should be empty.",
                    "modules": [1]
                }
            ]
        },
        {
            "user_requirement_id": 3,
            "user_requirement_name": "Play Pronunciation of a Word",
            "user_requirement_description": "Users can click a button to hear the pronunciation of the searched word.",
            "test_cases": [
                {
                    "test_case_id": 5,
                    "test_case_name": "Play Pronunciation",
                    "test_case_description": "Verify that clicking the speaker icon plays the pronunciation of the searched word.",
                    "steps": [
                        "Navigate to the website.",
                        "Search for the word 'play'.",
                        "Click the speaker icon."
                    ],
                    "expected_result": "The pronunciation of the word 'play' is played aloud.",
                    "modules": [1, 2, 4]
                }
            ]
        },
        {
            "user_requirement_id": 4,
            "user_requirement_name": "View Recent Searches",
            "user_requirement_description": "Users can view the list of recently searched words (up to the last five).",
            "test_cases": [
                {
                    "test_case_id": 6,
                    "test_case_name": "View Recent Searches",
                    "test_case_description": "Verify that recently searched words are displayed in the history section.",
                    "steps": [
                        "Navigate to the website.",
                        "Type 'Play' in the search box.",
                        "Click the search button.",
                        "Type 'Hello' in the search box.",
                        "Click the search button.",
                        "Navigate to the 'Recent Searches' section."
                    ],
                    "expected_result": "The list of recently searched words 'Play' and 'Hello' is displayed.",
                    "modules": [1, 3]
                },
                {
                    "test_case_id": 7,
                    "test_case_name": "Limit of Recent Searches",
                    "test_case_description": "Verify that the history only keeps a certain number of searches (e.g., last 5).",
                    "steps": [
                        "Navigate to the website.",
                        "Type 'Play' in the search box.",
                        "Click the search button.",
                        "Type 'Hello' in the search box.",
                        "Click the search button.",
                        "Type 'World' in the search box.",
                        "Click the search button.",
                        "Type 'Goodbye' in the search box.",
                        "Click the search button.",
                        "Type 'Morning' in the search box.",
                        "Click the search button.",
                        "Type 'Flower' in the search box.",
                        "Click the search button.",
                        "Navigate to 'Recent Searches'."
                    ],
                    "expected_result": "Only the last 5 searches 'Flower', 'Morning', 'Goodbye', 'World', and 'Hello' are displayed.",
                    "modules": [1, 3]
                }
            ]
        }
    ]
}